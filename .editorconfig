# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{js,json,less,css,sass,scss}]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false
